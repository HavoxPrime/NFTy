<div class="logout">
    <div>
        <button id="logout" type="button" class="btn btn-outline-secondary">Logout</button>
    </div>
</div>
<div class="row justify-space-between-md .btn-block">
    {{!-- login form --}}
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="loginbtn">login</button>
      </div>
      {{!-- new user sign up form --}}
    </form>

  </div>
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label  for="username-signup">Username:</label>
        <input class="form-input username-signup " type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label   for="email-signup">Email:</label>
        <input class="form-input" type="text"  id="email-signup"/>
      </div>
      <div class="form-group">
        <label  for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup"  />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="signupbtn">signup</button>
      </div>
    </form>
  </div>
  

</div>
<script src="/js/login.js"></script>